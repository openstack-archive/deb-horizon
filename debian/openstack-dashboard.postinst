#!/bin/sh
set -e

if [ "$1" = "configure" ]
then
    adduser --system \
	--home /var/lib/horizon \
        --quiet \
        --disabled-password \
        --group horizon

  if [ -e /usr/share/openstack-dashboard/openstack_dashboard/static ] ; then
    chown -R www-data:www-data \
      /usr/share/openstack-dashboard/openstack_dashboard/static
  fi
fi

